---
import MainLayout from '../../layouts/MainLayout.astro';
import { fetchFeaturedRepos, formatDate } from '../../utils/github';

const title = 'Projects | Noah Cantor';
const description = 'Explore projects by Noah Cantor - Automation, Technical Solutions, and Creative Development';

// Fetch GitHub repositories data
const projects = await fetchFeaturedRepos();
---

<MainLayout title={title} description={description}>
  <section class="py-16 md:py-24 px-4">
    <div class="container mx-auto max-w-5xl">
      <div class="text-center mb-16">
        <h1 class="text-4xl md:text-5xl font-bold mb-6">
          <span class="lang-en">My Projects</span>
          <span class="lang-es hidden">Mis Proyectos</span>
        </h1>
        <p class="text-lg max-w-2xl mx-auto lang-en">
          A collection of my technical projects focusing on automation, optimization, and creative solutions.
        </p>
        <p class="text-lg max-w-2xl mx-auto lang-es hidden">
          Una colección de mis proyectos técnicos centrados en automatización, optimización y soluciones creativas.
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        {projects.map(project => (
          <div class="bg-white dark:bg-gray-800 rounded-lg overflow-hidden shadow-md transition duration-300 hover:shadow-lg">
            <div class="p-6">
              <div class="flex justify-between items-start mb-4">
                <h2 class="text-2xl font-bold text-primary">{project.name}</h2>
                <span class="text-xs bg-primary/10 text-primary px-2 py-1 rounded-full">{project.language || 'N/A'}</span>
              </div>
              <p class="text-gray-600 dark:text-gray-300 mb-6">{project.description}</p>
              
              <div class="mb-6">
                <div class="flex items-center text-sm text-gray-500 dark:text-gray-400 mb-2">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                  <span class="lang-en">Last updated: </span>
                  <span class="lang-es hidden">Última actualización: </span>
                  {formatDate(project.lastCommitDate)}
                </div>
                <div class="flex items-center space-x-4">
                  <div class="flex items-center text-sm text-gray-500 dark:text-gray-400">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M12 .587l3.668 7.568 8.332 1.151-6.064 5.828 1.48 8.279-7.416-3.967-7.417 3.967 1.481-8.279-6.064-5.828 8.332-1.151z"/>
                    </svg>
                    {project.stars}
                  </div>
                  <div class="flex items-center text-sm text-gray-500 dark:text-gray-400">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M5 10v-5h5v-5h9v5h5v5h-5v8h-9v-8h-5zm12-5h-4v-4h-1v4h-4v1h4v12h1v-12h4v-1z"/>
                    </svg>
                    {project.forks}
                  </div>
                </div>
              </div>
              
              <div class="flex justify-between items-center">
                <a 
                  href={project.url} 
                  target="_blank" 
                  rel="noopener noreferrer"
                  class="inline-flex items-center text-primary hover:underline"
                >
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                  </svg>
                  <span class="lang-en">View on GitHub</span>
                  <span class="lang-es hidden">Ver en GitHub</span>
                </a>
                {project.homepage && (
                  <a 
                    href={project.homepage} 
                    target="_blank" 
                    rel="noopener noreferrer"
                    class="primary-btn inline-flex items-center text-sm"
                  >
                    <span class="lang-en">Live Demo</span>
                    <span class="lang-es hidden">Demostración</span>
                  </a>
                )}
              </div>
            </div>
          </div>
        ))}
      </div>
      
      <div class="mt-16 text-center">
        <p class="mb-4 text-lg">
          <span class="lang-en">Want to see more of my work?</span>
          <span class="lang-es hidden">¿Quieres ver más de mi trabajo?</span>
        </p>
        <a 
          href="https://github.com/NoahTheGinger" 
          target="_blank" 
          rel="noopener noreferrer"
          class="secondary-btn inline-flex items-center"
        >
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
          </svg>
          <span class="lang-en">Visit My GitHub Profile</span>
          <span class="lang-es hidden">Visitar Mi Perfil de GitHub</span>
        </a>
      </div>
    </div>
  </section>
</MainLayout>
