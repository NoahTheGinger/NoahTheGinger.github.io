---
import MainLayout from '../layouts/MainLayout.astro';
import { Image } from 'astro:assets';

// Page metadata
const title = 'Noah Cantor | Personal Portfolio';
const description = 'Noah Cantor - Process Optimizer, Recruiter Hacker, Bilingual Problem-Solver';

// Featured projects - these will be fetched dynamically in later implementation
const featuredProjects = [
  {
    id: 'promptimizer',
    name: 'Promptimizer',
    description: 'Tool for optimizing and testing AI prompts',
    image: '/assets/images/project-placeholder.jpg',
    url: 'https://github.com/NoahTheGinger/Promptimizer'
  },
  {
    id: 'freesearch',
    name: 'FreeSearch',
    description: 'Advanced search tool for developer productivity',
    image: '/assets/images/project-placeholder.jpg',
    url: 'https://github.com/NoahTheGinger/FreeSearch'
  }
];
---

<MainLayout title={title} description={description}>
  <!-- Hero Section -->
  <section class="py-20 md:py-32 px-4">
    <div class="container mx-auto max-w-5xl">
      <div class="flex flex-col items-center text-center mb-12">
        <h1 class="text-4xl md:text-6xl font-bold mb-6">
          Hi, I'm <span class="gradient-text">Noah Cantor</span>
        </h1>
        <div class="text-xl md:text-2xl font-medium mb-8 h-8">
          <span class="lang-en">I'm a </span>
          <span class="lang-es hidden">Soy un </span>
          <span id="typewriter" class="text-primary"></span>
        </div>
        <p class="text-lg md:text-xl max-w-2xl mb-10 lang-en">
          Resourceful and adaptable office professional with extensive experience in talent acquisition, administrative support, and technical coordination. I specialize in automation and process improvement.
        </p>
        <p class="text-lg md:text-xl max-w-2xl mb-10 lang-es hidden">
          Profesional de oficina con amplia experiencia en adquisición de talento, soporte administrativo y coordinación técnica. Me especializo en automatización y mejora de procesos.
        </p>
        <div class="flex flex-wrap gap-4 justify-center">
          <a href="/projects" class="primary-btn">
            <span class="lang-en">View Projects</span>
            <span class="lang-es hidden">Ver Proyectos</span>
          </a>
          <a href="/timeline" class="secondary-btn">
            <span class="lang-en">My Journey</span>
            <span class="lang-es hidden">Mi Trayectoria</span>
          </a>
          <a href="/static/NoahCantorResume.pdf" class="secondary-btn" target="_blank">
            <span class="lang-en">Download Resume</span>
            <span class="lang-es hidden">Descargar CV</span>
          </a>
        </div>
      </div>
    </div>
  </section>
  
  <!-- Featured Projects Section -->
  <section class="py-16 px-4 bg-gray-50 dark:bg-gray-900">
    <div class="container mx-auto max-w-5xl">
      <h2 class="text-3xl font-bold mb-12 text-center">
        <span class="lang-en">Featured Projects</span>
        <span class="lang-es hidden">Proyectos Destacados</span>
      </h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        {featuredProjects.map(project => (
          <a href={`/projects/${project.id}`} class="group">
            <div class="bg-white dark:bg-gray-800 rounded-lg overflow-hidden shadow-md hover:shadow-lg transition duration-300">
              <div class="h-48 bg-gray-200 dark:bg-gray-700 relative">
                <div class="absolute inset-0 flex items-center justify-center text-gray-500 dark:text-gray-400">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-16" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M9 3v2m6-2v2M9 19v2m6-2v2M5 9H3m2 6H3m18-6h-2m2 6h-2M7 19h10a2 2 0 002-2V7a2 2 0 00-2-2H7a2 2 0 00-2 2v10a2 2 0 002 2zM9 9h6v6H9V9z" />
                  </svg>
                </div>
              </div>
              <div class="p-6">
                <h3 class="text-xl font-semibold mb-2 group-hover:text-primary transition-colors">{project.name}</h3>
                <p class="text-gray-600 dark:text-gray-300 mb-4">{project.description}</p>
                <div class="flex justify-between items-center">
                  <span class="text-primary text-sm font-medium">
                    <span class="lang-en">View details</span>
                    <span class="lang-es hidden">Ver detalles</span>
                  </span>
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-primary transform group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
                  </svg>
                </div>
              </div>
            </div>
          </a>
        ))}
      </div>
      <div class="text-center mt-10">
        <a href="/projects" class="secondary-btn">
          <span class="lang-en">View All Projects</span>
          <span class="lang-es hidden">Ver Todos los Proyectos</span>
        </a>
      </div>
    </div>
  </section>
  
  <!-- Skills Section -->
  <section class="py-16 px-4">
    <div class="container mx-auto max-w-5xl">
      <h2 class="text-3xl font-bold mb-12 text-center">
        <span class="lang-en">Core Competencies</span>
        <span class="lang-es hidden">Competencias Principales</span>
      </h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <div class="p-6 bg-white dark:bg-gray-800 rounded-lg shadow-md">
          <div class="bg-primary/10 p-3 rounded-full w-12 h-12 flex items-center justify-center mb-4">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
            </svg>
          </div>
          <h3 class="text-lg font-semibold mb-2">
            <span class="lang-en">Office Administration</span>
            <span class="lang-es hidden">Administración de Oficina</span>
          </h3>
          <p class="text-gray-600 dark:text-gray-300">
            <span class="lang-en">Scheduling, document management, & process optimization.</span>
            <span class="lang-es hidden">Programación, gestión de documentos y optimización de procesos.</span>
          </p>
        </div>
        <div class="p-6 bg-white dark:bg-gray-800 rounded-lg shadow-md">
          <div class="bg-primary/10 p-3 rounded-full w-12 h-12 flex items-center justify-center mb-4">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
            </svg>
          </div>
          <h3 class="text-lg font-semibold mb-2">
            <span class="lang-en">Talent Acquisition</span>
            <span class="lang-es hidden">Adquisición de Talento</span>
          </h3>
          <p class="text-gray-600 dark:text-gray-300">
            <span class="lang-en">Full-cycle recruitment, candidate engagement, & client outreach.</span>
            <span class="lang-es hidden">Reclutamiento de ciclo completo, compromiso con candidatos y contacto con clientes.</span>
          </p>
        </div>
        <div class="p-6 bg-white dark:bg-gray-800 rounded-lg shadow-md">
          <div class="bg-primary/10 p-3 rounded-full w-12 h-12 flex items-center justify-center mb-4">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4" />
            </svg>
          </div>
          <h3 class="text-lg font-semibold mb-2">
            <span class="lang-en">Data & Technical Management</span>
            <span class="lang-es hidden">Gestión Técnica y de Datos</span>
          </h3>
          <p class="text-gray-600 dark:text-gray-300">
            <span class="lang-en">Precision data entry & quality control.</span>
            <span class="lang-es hidden">Entrada de datos de precisión y control de calidad.</span>
          </p>
        </div>
        <div class="p-6 bg-white dark:bg-gray-800 rounded-lg shadow-md">
          <div class="bg-primary/10 p-3 rounded-full w-12 h-12 flex items-center justify-center mb-4">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
            </svg>
          </div>
          <h3 class="text-lg font-semibold mb-2">
            <span class="lang-en">Project Management</span>
            <span class="lang-es hidden">Gestión de Proyectos</span>
          </h3>
          <p class="text-gray-600 dark:text-gray-300">
            <span class="lang-en">Cross-functional collaboration & workflow optimization.</span>
            <span class="lang-es hidden">Colaboración multifuncional y optimización del flujo de trabajo.</span>
          </p>
        </div>
        <div class="p-6 bg-white dark:bg-gray-800 rounded-lg shadow-md">
          <div class="bg-primary/10 p-3 rounded-full w-12 h-12 flex items-center justify-center mb-4">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z" />
            </svg>
          </div>
          <h3 class="text-lg font-semibold mb-2">
            <span class="lang-en">Communication</span>
            <span class="lang-es hidden">Comunicación</span>
          </h3>
          <p class="text-gray-600 dark:text-gray-300">
            <span class="lang-en">Strong interpersonal, written, & presentation skills.</span>
            <span class="lang-es hidden">Fuertes habilidades interpersonales, escritas y de presentación.</span>
          </p>
        </div>
        <div class="p-6 bg-white dark:bg-gray-800 rounded-lg shadow-md">
          <div class="bg-primary/10 p-3 rounded-full w-12 h-12 flex items-center justify-center mb-4">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5h12M9 3v2m1.048 9.5A18.022 18.022 0 016.412 9m6.088 9h7M11 21l5-10 5 10M12.751 5C11.783 10.77 8.07 15.61 3 18.129" />
            </svg>
          </div>
          <h3 class="text-lg font-semibold mb-2">
            <span class="lang-en">Languages</span>
            <span class="lang-es hidden">Idiomas</span>
          </h3>
          <p class="text-gray-600 dark:text-gray-300">
            <span class="lang-en">Fluent in Spanish.</span>
            <span class="lang-es hidden">Fluidez en inglés.</span>
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Call to Action Section -->
  <section class="py-16 px-4 bg-primary/5">
    <div class="container mx-auto max-w-3xl text-center">
      <h2 class="text-3xl font-bold mb-6">
        <span class="lang-en">Let's Work Together</span>
        <span class="lang-es hidden">Trabajemos Juntos</span>
      </h2>
      <p class="text-lg mb-8 max-w-2xl mx-auto">
        <span class="lang-en">Interested in my experience or want to discuss potential opportunities? Feel free to reach out!</span>
        <span class="lang-es hidden">¿Interesado en mi experiencia o quieres discutir posibles oportunidades? ¡No dudes en contactarme!</span>
      </p>
      <a href="mailto:noahcantor998@gmail.com" class="primary-btn inline-flex items-center">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
        </svg>
        <span class="lang-en">Contact Me</span>
        <span class="lang-es hidden">Contáctame</span>
      </a>
    </div>
  </section>

  <!-- Add Typewriter effect -->
  <script>
    import Typewriter from 'typewriter-effect/dist/core';
    
    // Initialize typewriter effect after DOM is loaded
    document.addEventListener('DOMContentLoaded', () => {
      const typewriterElement = document.getElementById('typewriter');
      
      if (typewriterElement) {
        const typewriter = new Typewriter(typewriterElement, {
          strings: ['Process Optimizer', 'Recruiter Hacker', 'Bilingual Problem-Solver'],
          autoStart: true,
          loop: true,
          deleteSpeed: 50,
          delay: 80,
        });
      }
      
      // Listen for language changes to update typewriter
      window.addEventListener('languageChange', (e) => {
        const typewriterInstance = typewriterElement?._typewriter;
        if (typewriterInstance) {
          // Reset and reinitialize for language change if needed
          typewriterInstance.stop();
          typewriterInstance.start();
        }
      });
    });
  </script>
</MainLayout>
